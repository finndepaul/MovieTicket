@page "/cinema"

<div class="d-flex justify-content-between mb-3">
    <h3>Danh sách phòng chiếu</h3>
    <button class="btn btn-success" @onclick="ShowCreateModal">Tạo phòng chiếu</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Tên phòng chiếu</th>
            <th scope="col">Tên rạp</th>
            <th scope="col">Số lượng ghế (Tối đa)</th>
            <th scope="col">Số hàng</th>
            <th scope="col">Số cột</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cinema in Cinemas)
        {
            <tr>
                <td>@cinema.TenPhongChieu</td>
                <td>@cinema.TenRap</td>
                <td>@cinema.SoLuongGheToiDa</td>
                <td>@cinema.SoHang</td>
                <td>@cinema.SoCot</td>
                <td>@cinema.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>
                    <button class="btn btn-primary btn-sm me-2" @onclick="() => EditCinema(cinema)">Sửa</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => DeleteCinema(cinema)">Xóa</button>
                    <button class="btn btn-info btn-sm ms-2" @onclick="() => ShowCreateScheduleModal(cinema)">Tạo lịch chiếu</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Tạo Lịch Chiếu -->
@if (IsCreateScheduleModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tạo Lịch Chiếu</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateScheduleModal"></button>
                </div>
                <div class="modal-body">
                    <!-- Nội dung form tạo lịch chiếu -->
                    <div class="form-group">
                        <label for="scheduleDate">Ngày chiếu</label>
                        <input type="date" id="scheduleDate" class="form-control" @bind="ScheduleDate" />
                    </div>
                    <div class="form-group">
                        <label for="scheduleTime">Giờ chiếu</label>
                        <input type="time" id="scheduleTime" class="form-control" @bind="ScheduleTime" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateScheduleModal">Hủy</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateSchedule">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

