@page "/showtime"
@attribute [Authorize(Roles = "Admin")]
<div class="container-fluid">
	<div class="d-flex align-items-center mb-3">
		<div class="d-flex align-items-center me-4">
			<label for="cinema" class="me-2 mb-0">Rạp chiếu:</label>
			<select class="form-control form-control-sm" id="cinema" style="width: 150px;">
				<option value="">Select a cinema</option>
			</select>
		</div>

		<div class="d-flex align-items-center me-4">
			<label for="auditorium" class="me-2 mb-0">Phòng chiếu:</label>
			<select class="form-control form-control-sm" id="auditorium" style="width: 150px;">
				<option value="">Select an auditorium</option>
			</select>
		</div>

		<div class="d-flex align-items-center me-4">
			<label for="date" class="me-2 mb-0">Ngày chiếu:</label>
			<input type="date" id="date" class="form-control form-control-sm" style="width: 150px;">
		</div>

		<div class="d-flex align-items-center">
			<button class="btn btn-primary btn-sm">Tìm kiếm</button>
		</div>
	</div>


	<h6 class="text-center mt-5">Lịch chiếu ngày: 16-05-2024</h6>
	<h6 class="text-center mt-3 text-white bg-primary" style="padding: 9px; border-radius: 6px">Rạp: HCinema Aeon Hà Đông</h6>
	<h6 class="mb-3" style="color: white">Cinema 1</h6>

	<div class="table-responsive">
		<table class="table">
			<thead class="table-light">
				<tr>
					<th></th>
					<th scope="col">Phim chiếu</th>
					<th scope="col">Hình thức chiếu</th>
					<th scope="col">Hình thức dịch</th>
					<th scope="col">Thời gian chiếu</th>
					<th scope="col">Loại suất chiếu</th>
					<th scope="col">Trạng thái</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 6l16 0" /><path d="M4 12l16 0" /><path d="M4 18l16 0" /></svg></td>
					<td class="text-primary">Tà Khúc Triệu Vong</td>
					<td><span class="p-2 m-2 badge text-primary bg-primary bg-opacity-10 border border-primary">2D</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Phụ đề</span></td>
					<td><span class="p-2 m-2 badge text-warning bg-warning bg-opacity-10 border border-warning">08:00 - 09:45</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Theo lịch</span></td>
					<td><span class="p-2 m-2 badge text-danger bg-danger bg-opacity-10 border border-danger">Đã chiếu</span></td>
				</tr>
				<tr>
					<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 6l16 0" /><path d="M4 12l16 0" /><path d="M4 18l16 0" /></svg></td>
					<td class="text-primary">Kẻ Thế Thân</td>
					<td><span class="p-2 m-2 badge text-primary bg-primary bg-opacity-10 border border-primary">2D</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Phụ đề</span></td>
					<td><span class="p-2 m-2 badge text-warning bg-warning bg-opacity-10 border border-warning">10:15 - 12:10</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Theo lịch</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Đang chiếu</span></td>
				</tr>
				<tr>
					<td><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 6l16 0" /><path d="M4 12l16 0" /><path d="M4 18l16 0" /></svg></td>
					<td class="text-primary">Người "Bạn" Trong Tưởng Tượng</td>
					<td><span class="p-2 m-2 badge text-primary bg-primary bg-opacity-10 border border-primary">2D</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Phụ đề</span></td>
					<td><span class="p-2 m-2 badge text-warning bg-warning bg-opacity-10 border border-warning">12:40 - 14:35</span></td>
					<td><span class="p-2 m-2 badge text-success bg-success bg-opacity-10 border border-success">Theo lịch</span></td>
					<td><span class="p-2 m-2 badge text-primary bg-primary bg-opacity-10 border border-primary">Sắp chiếu</span></td>
				</tr>
				<!-- More rows as needed -->
			</tbody>
		</table>
	</div>

	<div class="mt-3">
		<!-- Button to Open Modal -->
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleModal">
			+ Thêm suất chiếu
		</button>
	</div>

	<div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header" data-bs-theme="dark">
					<h5 class="modal-title" id="scheduleModalLabel">Thêm suất chiếu (HCinema Aeon Hà Đông - Cinema 1)</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form>
						<!-- Movie Title -->
						<div class="mb-3">
							<label for="movieTitle" class="form-label">Phim chiếu</label>
							<select class="form-select" id="movieTitle">
								<option value="">Monkey Man Báo Thù</option>
								<option value="">Hello world</option>
							</select>
							<small class="text-success">Đang chiếu</small>
						</div>

						<!-- Screening Date -->
						<div class="mb-3">
							<label for="screeningDate" class="form-label">Ngày chiếu</label>
							<input type="date" class="form-control" id="screeningDate" value="2024-05-16" disabled>
						</div>

						<!-- Format -->
						<div class="mb-3">
							<label for="format" class="form-label">Hình thức chiếu</label>
							<select class="form-select" id="format">
								<option selected>2D</option>
								<option value="1">3D</option>
								<option value="2">IMAX</option>
							</select>
						</div>

						<!-- Translation Type -->
						<div class="mb-3">
							<label for="translationType" class="form-label">Hình thức dịch</label>
							<select class="form-select" id="translationType">
								<option selected>Phụ đề</option>
								<option value="1">Lồng tiếng</option>
							</select>
						</div>

						<!-- Screening Time -->
						<div class="mb-3">
							<label for="screeningTime" class="form-label">Thời gian chiếu</label>
							<div class="row">
								<div class="col">
									<input type="time" class="form-control" id="startTime" value="22:50">
								</div>
								<div class="col">
									<input type="time" class="form-control" id="endTime" value="00:45">
								</div>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
					<button type="button" class="btn btn-primary">Tạo suất chiếu</button>
				</div>
			</div>
		</div>
	</div>
</div>

